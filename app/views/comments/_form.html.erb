<%= form_for [@post, @comment] do |f| %>
	<% if @comment.errors.any? %>
		<h4><%= pluralize(@comment.errors.count, "error") %> 
		prevented this comment from being saved:</h4>
		<ul>
		<% @comment.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	<% end %>

	<p>
		<%= f.label :commenter %><br>
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :content %><br>
		<%= f.text_area :content %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>