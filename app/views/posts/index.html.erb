<h1>Posts list: </h1>
<table>
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.id %></td>
			<td><%= post.title %></td>
			<td><%= link_to 'show', post_path(post) %></td>
			<td><%= link_to 'edit', edit_post_path(post)%></td>
			<td><%= link_to 'delete', post_path(post), 
									  method: :delete,
									  data: {confirm: "Are You sure?"}%></td>
		</tr>
	<% end %>
</table>